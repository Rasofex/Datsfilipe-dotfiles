#!/bin/bash

wm=$(xprop -id "$(xprop -root _NET_SUPPORTING_WM_CHECK | cut -d ' ' -f 5)" | grep "_NET_WM_NAME" | cut -d '"' -f 2)
os=$(lsb_release -sd)
os=${os##[\"\']}
os=${os%%[\"\']}
SH=$(basename $SHELL)
PKGS=$(pacman -Q | wc -l)
USER=$(whoami)

# Colors
R=$'\e[0;31m'
G=$'\e[0;32m'
Y=$'\e[0;33m'
B=$'\e[0;34m'
P=$'\e[0;35m'
A=$'\e[0m'

tput clear
cat << EOF
      ／l、"
    （ﾟ､ ｡ ７ " 
      l、ﾞ~ヽ"
      じしf_, )ノ"

 $P$USER/$HOSTNAME
 $R $G $Y $B $P

$P User$A  - $USER
$G OS$A    - $os
$Y WM$A    - $wm
$R Shell$A - $SH
$B Pkg$A   - $PKGS
EOF
